<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.duckfollow.qrcode">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app_qrcode"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app_qrcode"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.StoreActivity"></activity>
        <activity android:name=".activity.ViewResultActivity" />
        <activity android:name=".activity.GenerateQRActivity" />
        <activity
            android:name=".activity.ScannerActivity"
            android:theme="@style/AppThemeTransparent" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2582707291059118~8882306426" />
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
    </application>

</manifest>